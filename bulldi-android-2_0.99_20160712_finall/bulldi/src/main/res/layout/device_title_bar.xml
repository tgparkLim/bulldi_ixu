<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@color/DarkTurquoise"
    android:layout_gravity="top">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center">
    <ImageView
        android:id="@+id/setting_icon"
        android:layout_width="55dp"
        android:layout_height="60dp"
        android:src="@drawable/setting_off"
        android:layout_gravity="center"
        android:layout_marginLeft="11.25dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="right">
        <ImageView
            android:id="@+id/history_state"
            android:layout_width="55dp"
            android:layout_height="60dp"
            android:src="@drawable/history_off"
            android:layout_marginRight="11.25dp"/>
        <ImageView
            android:id="@+id/lighting_state"
            android:layout_width="55dp"
            android:layout_height="60dp"
            android:src="@drawable/icn_lighting"
            android:layout_marginRight="11.25dp"/>
    </LinearLayout>

</LinearLayout>