<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:foo="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="44.5dp"
    android:minHeight="44.5dp"
    android:background="@color/White">
    <openstack.util.TextViewPlus
        android:id="@+id/etc_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Language"
        foo:customFont="Roboto-Regular.ttf"
        android:textSize="18dp"
        android:layout_marginLeft="11.25dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right">

        <ImageView
            android:id="@+id/etc_img"
            android:layout_width="14.33dp"
            android:layout_height="20.67dp"
            android:src="@drawable/arrow_list"
            android:layout_gravity="center"
            android:layout_marginRight="11.25dp"
            />
    </LinearLayout>

</LinearLayout>