<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:foo="http://schemas.android.com/apk/res-auto"
    android:id="@+id/temp_layout"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_tem"
    >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="20.25dp"
        ></LinearLayout>
    <ImageView
        android:id="@+id/temp_up"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/up_off"
        android:layout_gravity="center|top"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"

        />
    <openstack.util.TextViewPlus
        android:id="@+id/temp_label_starting_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sensor_start_time"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:paddingTop="30dp"
        android:paddingBottom="6.25dp"
        android:textColor="@color/White"
        foo:customFont="Roboto-Regular.ttf"/>
    <openstack.util.TextViewPlus
        android:id="@+id/starting_time_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="FRI, OCT 09, 2015 07:32 AM"
        android:textSize="20dp"
        android:paddingBottom="40dp"
        android:textColor="@color/White"
        foo:customFont="Roboto-Regular.ttf"/>
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <TableRow>
            <openstack.util.TextViewPlus
                android:id="@+id/temp_highest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="30dp"
                android:paddingBottom="12.5dp"
                android:textColor="@color/White"
                android:text="28.2"
                foo:customFont="Roboto-Thin.ttf"
                />
            <openstack.util.TextViewPlus
                android:id="@+id/temp_lowest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginLeft="37.5dp"
                android:layout_marginRight="37.5dp"
                android:textSize="30dp"
                android:paddingBottom="12.5dp"
                android:textColor="@color/White"
                android:text="16.4"
                foo:customFont="Roboto-Thin.ttf"
                />
            <openstack.util.TextViewPlus
                android:id="@+id/temp_average"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="30dp"
                android:paddingBottom="12.5dp"
                android:textColor="@color/White"
                android:text="22.7"
                foo:customFont="Roboto-Thin.ttf"
                />
        </TableRow>
        <TableRow>
            <openstack.util.TextViewPlus
                android:id="@+id/label_temp_highest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/sensor_highest"
                android:textSize="17dp"
                android:paddingBottom="17.5dp"
                android:textColor="@color/White"
                foo:customFont="Roboto-Regular.ttf"
                />
            <openstack.util.TextViewPlus
                android:id="@+id/label_temp_lowest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/sensor_lowest"
                android:textSize="17dp"
                android:paddingBottom="17.5dp"
                android:textColor="@color/White"
                foo:customFont="Roboto-Regular.ttf"
                />
            <openstack.util.TextViewPlus
                android:id="@+id/label_temp_average"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/sensor_avarage"
                android:textSize="17dp"
                android:paddingBottom="17.5dp"
                android:textColor="@color/White"
                foo:customFont="Roboto-Regular.ttf"
                />
        </TableRow>
        <TableRow>
            android:layout_gravity="center"
            <ImageView
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_gravity="center"
                android:src="@drawable/point_highest"
                />
            <ImageView
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_gravity="center"
                android:src="@drawable/point_lowest"
                />
            <ImageView
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_gravity="center"
                android:src="@drawable/point_average"
                />

        </TableRow>
    </TableLayout>
>
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="25dp"
        android:paddingTop="5dp">
        <com.jjoe64.graphview.GraphView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/graph_temp"
            />

    </FrameLayout>

</LinearLayout>