<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/generic_co"
    >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:paddingBottom="17.5dp"
       >
        <TableRow>
            <TextView
                android:id="@+id/co_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="68.625dp"
                android:text="0"
                />
            <TextView
                android:id="@+id/co_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="PPM"
                android:textSize="45.75dp"
                />
        </TableRow>
    </TableLayout>
    <TextView
        android:id="@+id/co_status"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/sensor_status_good"
        android:textSize="27dp"
        android:paddingBottom="5dp"/>
    <ImageView
        android:id="@+id/co_image"
        android:layout_width="90dp"
        android:layout_height="34dp"
        android:layout_gravity="center"
        android:src="@drawable/smoke_01"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <ImageView
            android:id="@+id/co_down"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:src="@drawable/bot_cogas"
            android:layout_gravity="center|bottom"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"/>
    </LinearLayout>
</LinearLayout>
