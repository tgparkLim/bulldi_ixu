<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:foo="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/White">
    <openstack.util.TextViewPlus
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Brightness"
        foo:customFont="Roboto-Regular.ttf"
        android:textSize="13.5dp"
        android:layout_marginLeft="11.25dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textStyle="bold"
        />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">
        <openstack.util.CheckBoxImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/Brightness_1"
            android:layout_width="23.75dp"
            android:layout_height="23.75dp"
            android:clickable="true"
            app:checked_img="@drawable/control_on"
            app:default_img="@drawable/control_off"
            android:layout_gravity="center"
            android:layout_marginLeft="11.25dp"

            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="3.75dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@drawable/control_bg">

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">
        <openstack.util.CheckBoxImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/Brightness_2"
            android:layout_width="23.75dp"
            android:layout_height="23.75dp"
            android:clickable="true"
            app:checked_img="@drawable/control_on"
            app:default_img="@drawable/control_off"
            android:layout_gravity="center"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="3.75dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@drawable/control_bg">

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">
        <openstack.util.CheckBoxImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/Brightness_3"
            android:layout_width="23.75dp"
            android:layout_height="23.75dp"
            android:clickable="true"
            app:checked_img="@drawable/control_on"
            app:default_img="@drawable/control_off"
            android:layout_gravity="center"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="3.75dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@drawable/control_bg">

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">
        <openstack.util.CheckBoxImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/Brightness_4"
            android:layout_width="23.75dp"
            android:layout_height="23.75dp"
            android:clickable="true"
            app:checked_img="@drawable/control_on"
            app:default_img="@drawable/control_off"
            android:layout_gravity="center"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="3.75dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@drawable/control_bg">

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:gravity="center">
        <openstack.util.CheckBoxImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/Brightness_5"
            android:layout_width="23.75dp"
            android:layout_height="23.75dp"
            android:clickable="true"
            app:checked_img="@drawable/control_on"
            app:default_img="@drawable/control_off"
            android:layout_gravity="center"
            android:layout_marginRight="11.25dp"
            />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="5dp">
        <openstack.util.TextViewPlus
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Darkly"
            foo:customFont="Roboto-Regular.ttf"
            android:textSize="13.5dp"
            android:layout_marginLeft="11.25dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right">
            <openstack.util.TextViewPlus
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Brightly"
                foo:customFont="Roboto-Regular.ttf"
                android:textSize="13.5dp"
                android:layout_marginRight="11.25dp"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>