<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:foo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:clickable="false"

    android:longClickable="false"
    android:orientation="vertical"
    android:padding="0dp"
    tools:context=".Connection_seperate" >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="25dp">
    </LinearLayout>
    <openstack.util.TextViewPlus
        android:id="@+id/blue_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20dp"
        android:textStyle="bold"
        foo:customFont="Roboto-Regular.ttf"
        android:layout_gravity="center"
        android:textColor="@color/Black"
        />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="25dp">
    </LinearLayout>
    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/blueGif"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_gravity="center_horizontal"
        />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="25dp">
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="vertical">
        <openstack.util.TextViewPlus
            android:id="@+id/no_device"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:textSize="18dp"
            android:text="@string/no_device"
            android:layout_marginBottom="15dp"
            android:textColor="@color/Black"
            foo:customFont="Roboto-Regular.ttf"/>
        <Button
            android:id="@+id/btn_scan_seperate"
            android:background="@drawable/button_off1"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:fadingEdge="vertical"
            android:layout_gravity="center_horizontal"
            android:linksClickable="false"
            android:onClick="onBtnScan"
            android:text="@string/button_scan"
            android:textColor="@color/White"
            android:layout_marginBottom="50dp"
            />
    </LinearLayout>

</LinearLayout>