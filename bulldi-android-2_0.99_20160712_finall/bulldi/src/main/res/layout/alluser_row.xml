<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:foo="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <RelativeLayout
    android:id="@+id/relativelay"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/White"
    android:orientation="vertical"
    android:paddingLeft="11.25dp">

    <openstack.util.TextViewPlus
        android:id="@+id/tvname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="3dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Title"
        android:textColor="#000000"
        android:textSize="17dp"
        android:textStyle="bold" >
    </openstack.util.TextViewPlus>

    <openstack.util.TextViewPlus
        android:id="@+id/tvphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvname"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Phone no"
        android:textColor="#000000"
        android:textSize="14dp" >
    </openstack.util.TextViewPlus>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/White"
        android:gravity="right"
        android:layout_weight="1">
       <openstack.util.CheckBoxImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/but_add_contact"
            android:layout_width="52.5dp"
            android:layout_height="32.5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            app:checked_img="@drawable/but_add_on"
            app:default_img="@drawable/but_add_off"
            android:layout_gravity="center"
            android:layout_marginRight="11.25dp"/>
        <!--        <CheckBox
            android:id="@+id/but_add_contact"
            android:layout_width="210px"
            android:layout_height="130px"
            android:button="@drawable/checkbox"
            android:clickable="true"/>-->
    </LinearLayout>
</LinearLayout>